// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "AI-Free Student Environment Python 3.11",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",

	// Configure tool-specific properties.
	// "customizations": {},
	"customizations": {
		"vscode": {
			"extensions": 
				[
					"ms-python.python",
					"ms-vscode-remote.remote-containers"
				],
			"unwanted":[
					"GitHub.copilot",
					"GitHub.copilot-chat",
					"GitHub.copilot-labs"
				],
			"settings": {
				"editor.quickSuggestions": {"strings": false,
					"comments": false,
					"other": false
				},
				"editor.inlineSuggest.enabled": false,
				"editor.suggestOnTriggerCharacters": false,
				"github.copilot.enable": {"*":false},
				"github.copilot.chat.enable": false,
				"github.copilot.inlineSuggest.enable": false,
				"editor.parameterHints.enabled": true,
				"chat.commandCenter.enabled": false,
				"workbench.panel.chat.enabled": false,
				"workbench.chat.openOnStart": false,
				"workbench.enableExperiments": false,
				"chat.editor.enableChatCompletions": false,
				"chat.editor.enableChatCompletionsWithContext": false,
				"chat.editor.enableChatCompletionsForSelection": false,
				"chat.editor.enableChatCompletionsWithContextForSelection": false,
				"chat.editor.enableCodeActions": false,
				//"accessibility.signals.chatRequestSent": "off",
				//"accessibility.signals.chatResponseReceived": "off",
				"extensions.autoCheckUpdates": false,
				"extensions.autoUpdate": false,
				"extensions.ignoreRecommendations": true,
				"workbench.statusbar.visible": false, //This one doesn't always work
				"workbench.editor.empty.hint": "hidden"
			}
		}
	}
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
